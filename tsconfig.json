{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "ES2019",
    "module": "ESNext",
    "noImplicitAny": false,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [{ "name": "ts-vue-plugin" }],
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*", "docs/**/*", "test/**/*"]
}
